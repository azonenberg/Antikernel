////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Global stuff

//The target device
target	xc6slx16-2csg225 scanpos 0

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Clocking

clock	clk_noc		input	H3		std LVCMOS18	freq 10M

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// PDM microphone

signal	mic_clk		output	C2		std LVCMOS18
signal	mic_data	input	C1		std LVCMOS18

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// DAC for speaker

signal	dac_reset_n		output	N2		std LVCMOS18
signal	dac_mclk		output	N1		std LVCMOS18

signal	dac_gpio1		inout	L3		std LVCMOS18
signal	dac_gpio2		inout	K4		std LVCMOS18

signal	dac_din			output	M4		std LVCMOS18
signal	dac_bclk		output	M3		std LVCMOS18
signal	dac_wclk		output	M1		std LVCMOS18

signal	dac_spi_cs_n	output	L2		std LVCMOS18
signal	dac_spi_mosi	output	L1		std LVCMOS18
signal	dac_spi_sck		output	K3		std LVCMOS18
signal	dac_spi_miso	input	K1		std LVCMOS18

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Control signals for CPLD

signal	ping_done	output	J4		std LVCMOS18

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// SPI flash

signal	spi_cs_n	output	R3	std LVCMOS18
signal	spi_sck		output	N12	std LVCMOS18
signal	spi_data[0]	inout	R11	std LVCMOS18
signal	spi_data[1]	inout	P11	std LVCMOS18
signal	spi_data[2]	inout	M11	std LVCMOS18	pullup
signal	spi_data[3]	inout	N11	std LVCMOS18	pullup

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Debug LEDs

signal	led_0		output	P1		std LVCMOS18
signal	led_1		output	P2		std LVCMOS18
