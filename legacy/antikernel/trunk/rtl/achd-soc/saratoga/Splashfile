/**
	@file
	@author Andrew D. Zonenberg
	@brief SPLASH build script for SARATOGA CPU
 */

#include <splashcore/splashcore.h>

using namespace std;

SPLASHFILE_EXPORT void CreateNodes(BuildGraph* graph)
{
	//Save some useful variables
	string srcdir = GetDirOfFile(CanonicalizePath(__FILE__));
	
	//Constgen stuff
	VerilogConstgenNode::CreateVerilogConstgenNode(graph, srcdir + "/SaratogaCPUThreadScheduler_opcodes.constants");
	CppConstgenNode::CreateCppConstgenNode(graph, srcdir + "/SaratogaCPUSyscalls.constants");
	VerilogConstgenNode::CreateVerilogConstgenNode(graph, srcdir + "/SaratogaCPUSyscalls.constants");
	VerilogConstgenNode::CreateVerilogConstgenNode(graph, srcdir + "/SaratogaCPUInstructionFunctions.constants");
	VerilogConstgenNode::CreateVerilogConstgenNode(graph, srcdir + "/SaratogaCPUInstructionOpcodes.constants");
	VerilogConstgenNode::CreateVerilogConstgenNode(graph, srcdir + "/SaratogaCPUBranchOpcodes.constants");
	VerilogConstgenNode::CreateVerilogConstgenNode(graph, srcdir + "/SaratogaCPURegisterIDs.constants");
	VerilogConstgenNode::CreateVerilogConstgenNode(graph, srcdir + "/SaratogaCPUManagementOpcodes.constants");
	CppConstgenNode::CreateCppConstgenNode(graph, srcdir + "/SaratogaCPUManagementOpcodes.constants");
	VerilogConstgenNode::CreateVerilogConstgenNode(graph, srcdir + "/SaratogaCPUPagePermissions.constants");
	CppConstgenNode::CreateCppConstgenNode(graph, srcdir + "/SaratogaCPUPagePermissions.constants");
	VerilogConstgenNode::CreateVerilogConstgenNode(graph, srcdir + "/SaratogaCPUL1CacheMissHandling_states.constants");
	VerilogConstgenNode::CreateVerilogConstgenNode(graph, srcdir + "/SaratogaCPUELFLoader_states.constants");
	VerilogConstgenNode::CreateVerilogConstgenNode(graph, srcdir + "/SaratogaCPUELFLoader_Ptypes.constants");
	VerilogConstgenNode::CreateVerilogConstgenNode(graph, srcdir + "/SaratogaCPUELFLoader_Errcodes.constants");
	VerilogConstgenNode::CreateVerilogConstgenNode(graph, srcdir + "/SaratogaCPURPCSubsystem_states.constants");
	VerilogConstgenNode::CreateVerilogConstgenNode(graph, srcdir + "/SaratogaCPURPCSubsystem_CreateErrcodes.constants");
}

SPLASHFILE_EXPORT void CreateEdges(BuildGraph* /*graph*/)
{

}
