/**
	@file
	@author Andrew D. Zonenberg
	@brief SPLASH build script for DMAClientToClientChannelTest
 */

#include <splashcore/splashcore.h>

using namespace std;

string g_testname = "DMAClientToClientChannelTest";

SPLASHFILE_EXPORT void CreateNodes(BuildGraph* graph )
{
	string srcdir = GetDirOfFile(CanonicalizePath(__FILE__));
	string prjroot = CanonicalizePath(srcdir + string("/../.."));
	
	//Setup
	YosysCrowbarFPGAToolchain* toolchain = YosysCrowbarFPGAToolchain::CreateDefaultToolchainCached();
	
	//Find source files
	vector<string> source_files;
	FindFilesByExtension(srcdir, ".v", source_files);
	source_files.push_back(CanonicalizePath(prjroot + "/rtl/achd-soc/noc/dma/DMATransceiverCore_tx.v"));
	source_files.push_back(CanonicalizePath(prjroot + "/rtl/achd-soc/noc/dma/DMATransceiverCore_rx.v"));
	
	//Compile
	FPGASynthesisFlagList flags;
	RTLILNetlistNode* netlist = RTLILNetlistNode::CreateRTLILNetlistNode(
		graph,
		source_files,
		toolchain,
		g_testname,
		"main",
		"xc6slx9-2tqg144",
		flags);
	
	//Test
	auto node = YosysProofUnitTestNode::CreateYosysProofUnitTestNode(
		graph,
		netlist,
		g_testname,
		"yosys");
	//node->LogSignal("count");
	node->LogSignal("link_en");
	node->LogSignal("link_ack");
	node->LogSignal("link_data");
	node->LogSignal("rxstate");
	node->LogSignal("rx_addr");
	node->LogSignal("rx_op");
	node->LogSignal("rx_len");
	node->LogSignal("rx_en");
	node->LogSignal("rx_we");
	node->LogSignal("rx_src_addr");
	node->LogSignal("rx_dst_addr");
	node->LogSignal("rx_dst_addr_expected");
	//node->LogSignal("rx_buf_waddr");
	node->LogSignal("rx_buf_wdata");
	//node->LogSignal("rx_done");
	node->LogSignal("rx_addr_expected");
	node->LogSignal("rx_len_expected");
	node->LogSignal("rx_op_expected");
	node->LogSignal("rx.rx_state");
	node->LogSignal("txvr.tx_state");
}

SPLASHFILE_EXPORT void CreateEdges(BuildGraph* graph)
{
	string arch = CppToolchain::CreateDefaultToolchainCached()->GetArchitecture();
	
	UnitTestNode* node = dynamic_cast<UnitTestNode*>(graph->GetTest(g_testname));
	if(node == NULL)
		FatalError(g_testname + ": test doesn't exist!");
}
